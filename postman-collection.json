            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"nouveau@example.com\",\n  \"name\": \"Nouvel Utilisateur\",\n  \"password\": \"motdepasse123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "response": []
        }
      ]
    },
