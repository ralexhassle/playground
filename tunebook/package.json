{
  "name": "@thesession/data-processor",
  "version": "1.0.0",
  "description": "Data processing utilities for TheSession.org musical database",
  "main": "dist/data-processor.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/data-processor.js",
    "dev": "ts-node data-processor.ts",
    "process": "ts-node data-processor.ts ./",
    "generate:samples": "ts-node sample-generator.ts",
    "generate:small": "ts-node sample-generator.ts --config small",
    "generate:large": "ts-node sample-generator.ts --config large",
    "test": "jest",
    "test:samples": "jest --testPathPattern=sample",
    "test:pipeline": "npm run generate:samples && npm run process && npm run test",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "irish-music",
    "traditional-music",
    "database",
    "music-analysis",
    "abc-notation",
    "thesession"
  ],
  "author": "Alexandre Hassler",
  "license": "MIT",
  "dependencies": {
    "pg": "^8.11.3",
    "@elastic/elasticsearch": "^8.10.0",
    "redis": "^4.6.8",
    "@faker-js/faker": "^8.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "jest": "^29.6.4",
    "@types/jest": "^29.5.4",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
