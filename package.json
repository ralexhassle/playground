{
  "name": "@monorepo/fullstack",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"pnpm db:up\" \"pnpm backend:dev\" \"pnpm frontend:dev\"",
    "frontend:dev": "nx serve frontend",
    "backend:dev": "nx dev backend",
    "build": "nx build frontend && nx build backend",
    "build:frontend": "nx build frontend",
    "build:backend": "nx build backend",
    "test": "nx test",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean:ports": "./clean-ports.sh",
    "setup:github": "./prepare-github.sh",
    "test:integration": "./test-integration.sh",
    "check:all": "pnpm format:check && pnpm lint && pnpm build"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/devkit": "21.3.10",
